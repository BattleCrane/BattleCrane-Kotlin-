<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/battle_constraint_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/fragment_battle_build_constraint_layout"
            android:visibility="visible">

        <TextView
                android:text="Buildings +"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_buildings_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_to_build_constraint_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="24sp" android:layout_marginBottom="32dp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_battle_buildings_count_text_view"
                android:layout_marginStart="8dp" android:gravity="left"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/fragment_battle_to_build_constraint_layout" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="128dp">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp" app:srcCompat="@drawable/human_button_build"
                    android:id="@+id/fragment_battle_to_build_image_view" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
                    app:layout_constraintDimensionRatio="h,1:1" android:layout_marginTop="16dp"
                    android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
            <TextView
                    android:text="Build"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fragment_battle_to_build_text_view"
                    android:gravity="bottom|center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_battle_to_build_image_view"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_buildings_count_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_to_build_constraint_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="24sp" android:layout_marginBottom="32dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_battle_buildings_text_view"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="0dp" tools:background="@color/colorPrimaryDark"
            android:background="@color/colorPrimary" android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintVertical_bias="0.555"
            app:layout_constraintDimensionRatio="1:1">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:id="@+id/fragment_battle_train_constraint_layout"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragment_battle_map_constraint_layout"
            android:visibility="visible">

        <TextView
                android:text="Infantry  +"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_infantry_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_to_train_constraint_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="24sp" android:layout_marginBottom="32dp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_battle_infantry_count_text_view"
                android:layout_marginStart="8dp" android:gravity="left"/>

        <TextView
                android:text="Vehicle +"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_vehicle_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_battle_infantry_count_text_view"
                android:layout_marginStart="8dp" android:layout_marginBottom="16dp" android:gravity="left"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_infantry_text_view"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/fragment_battle_to_train_constraint_layout" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="128dp">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp" app:srcCompat="@drawable/human_button_train"
                    android:id="@+id/fragment_battle_to_train_image_view" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
                    app:layout_constraintDimensionRatio="h,1:1" android:layout_marginTop="16dp"
                    android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
            <TextView
                    android:text="Train"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fragment_battle_to_train_text_view"
                    android:gravity="bottom|center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_battle_to_train_image_view"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:text="18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_infantry_count_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_to_train_constraint_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="24sp" android:layout_marginBottom="32dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_battle_infantry_text_view"
        />
        <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_vehicle_count_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="24sp" android:layout_marginBottom="16dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_battle_vehicle_text_view"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_infantry_count_text_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fragment_battle_map_constraint_layout"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_train_constraint_layout"
            android:layout_marginStart="16dp" android:id="@+id/fragment_battle_end_turn_constraint_layout">

        <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/fragment_battle_end_turn_progress_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:progress="75"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_end_turn_text_view"
                android:layout_marginBottom="2dp"/>
        <TextView
                android:text="End turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_end_turn_text_view"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_train_constraint_layout"
            app:layout_constraintTop_toBottomOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:id="@+id/fragment_battle_bonus_constraint_layout">

        <TextView
                android:text="Reinforcements +"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_bonus_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_battle_bonus_cont_text_view"
        />
        <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_bonus_cont_text_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fragment_battle_bonus_text_view"
                android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            android:id="@+id/fragment_battle_menu_image_view"
            app:layout_constraintBottom_toTopOf="@+id/fragment_battle_train_constraint_layout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_end_turn_constraint_layout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/fragment_battle_bonus_actions"
            app:layout_constraintEnd_toEndOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintBottom_toTopOf="@+id/fragment_battle_bonus_constraint_layout"
            app:layout_constraintTop_toBottomOf="@+id/fragment_battle_end_turn_constraint_layout"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/fragment_battle_map_constraint_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_battle_train_constraint_layout"
            app:layout_constraintTop_toTopOf="@+id/fragment_battle_train_constraint_layout"
            app:layout_constraintEnd_toStartOf="@+id/fragment_battle_bonus_actions"
            app:layout_constraintStart_toStartOf="@+id/fragment_battle_train_constraint_layout"
            android:id="@+id/fragment_battle_train_actions"
            android:visibility="invisible">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fragment_battle_build_actions"
            app:layout_constraintEnd_toEndOf="@+id/fragment_battle_build_constraint_layout"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_bonus_actions"
            app:layout_constraintTop_toTopOf="@+id/fragment_battle_build_constraint_layout"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_battle_build_constraint_layout"
            android:visibility="invisible">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>