<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/fragment_battle_root">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/fragment_battle_right_constraint_layout"
            android:visibility="visible" android:layout_marginStart="16dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="0.555"
            app:layout_constraintDimensionRatio="1:1" android:background="@color/colorPrimary">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:id="@+id/fragment_battle_left_constraint_layout"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragment_battle_map_constraint_layout"
            android:visibility="visible" android:layout_marginEnd="16dp">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fragment_battle_map_constraint_layout"
            android:id="@+id/fragment_battle_end_turn_constraint_layout"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fragment_battle_map_constraint_layout">

        <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/fragment_battle_end_turn_progress_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:progress="75"
                app:layout_constraintTop_toBottomOf="@+id/fragment_battle_end_turn_text_view"
                android:layout_marginBottom="2dp"/>
        <TextView
                android:text="End turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_end_turn_text_view"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"
                android:textColor="@android:color/background_light"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_left_constraint_layout"
            app:layout_constraintTop_toBottomOf="@+id/fragment_battle_map_constraint_layout"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:id="@+id/fragment_battle_bonus_constraint_layout">

        <TextView
                android:text="Reinforcements +"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_bonus_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_battle_bonus_cont_text_view"
        />
        <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_battle_bonus_cont_text_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fragment_battle_bonus_text_view"
                android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            android:id="@+id/fragment_battle_menu_image_view"
            app:layout_constraintBottom_toTopOf="@+id/fragment_battle_left_constraint_layout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@+id/fragment_battle_end_turn_constraint_layout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                       android:id="@+id/fragment_battle_loading_constraint_layout"
                                                       android:layout_height="0dp"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:background="@android:color/white"
                                                       android:visibility="visible">


        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_battle_loading_progress_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/fragment_battle_loading_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
                android:gravity="center_horizontal"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>